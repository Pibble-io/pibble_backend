<%- contentFor('body') %>

<div class="row">
    <div class="col-12 col-md-6 offset-md-3">
        <form method="post">
            <div class="panel">
                <div class="panel__header">
                    Register your mobile phone
                </div>
                <div class="panel__body">
                    <p class="panel__title">
                        Please enter the verification code we e-mailed to.
                    </p>
                    <div class="input">
                        <label class="input__label">Mobile phone number</label>
                        <div class="form-row">
                            <div class="col-4">
                                <input type="text" name="code" class="input__input" required>
                            </div>
                            <div class="col-8">
                                <input type="text" name="phone" class="input__input" required>
                            </div>
                        </div>
                        <p class="input__error">Display name can't be blank.</p>
                    </div>
                    <p>
                        The mobile phone will only be used if you wish to Two-Factor Authentication or receive a system SMS.
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <button type="submit" class="btn btn-main btn-block">Continue</button>
                </div>
            </div>
        </form>
    </div>
</div>







