<%- contentFor('body') %>

<div class="row">
    <div class="col-12 col-md-6 offset-md-3">
        <form method="post">
            <div class="panel">
                <div class="panel__header">
                    Join Pibble to use Social & Reward on TROPHYMINE
                </div>
                <div class="panel__body">
                    <div class="input">
                        <label class="input__label">User Name</label>
                        <input type="email" name="email" class="input__input" required>
                        <p class="input__error">Display name can't be blank.</p>
                    </div>
                    <div class="input">
                        <label class="input__label">Pibble Password</label>
                        <input type="password" name="password" class="input__input" required>
                        <p class="input__error">Password can't be blank.</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <button type="submit" class="btn btn-main btn-block">Continue</button>
                </div>
            </div>
        </form>
        <br>
        <p class="text-center">
            <a href="#" class="login-link">Already have an account?</a>
        </p>
    </div>
</div>







