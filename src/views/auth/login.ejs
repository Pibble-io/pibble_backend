<%- contentFor('body') %>

<div class="row">
    <div class="col-12 col-md-6 offset-md-3">
        <form method="post">
            <div class="panel">
                <div class="panel__header">
                    Log into your Pibble account to
                    connect to TROPHYMINE
                </div>
                <div class="panel__body">
                    <input type="hidden" name="grant_type" value="password" />
                    <div class="input">
                        <label class="input__label">Email</label>
                        <input type="email" name="email" value="<%= (data.prev.email) ? data.prev.email : '' %>" class="input__input" />
                        <%for (let message of data.messages){%>
                            <%if (message.path === 'email'){%>
                                <p class="input__error"><%=message.message%></p>
                            <%}%>
                        <%}%>
                    </div>
                    <div class="input">
                        <label class="input__label">Pibble Password</label>
                        <input type="password" name="password" class="input__input">
                        <%for (let message of data.messages){%>
                            <%if (message.path === 'password'){%>
                                <p class="input__error"><%=message.message%></p>
                            <%}%>
                        <%}%>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <button type="submit" class="btn btn-main btn-block">Log In</button>
                </div>
                <div class="col-6">
                    <button type="submit" class="btn btn-main btn-block disable" disabled>Create Account</button>
                </div>
            </div>
        </form>
        <br>
        <p class="text-center">
            <a href="#" class="login-link">Guest Login</a>
        </p>
        <p class="text-center">
            <a href="#" class="login-link">Forget Password?</a>
        </p>
    </div>
</div>







